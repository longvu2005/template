struct DSU {
    int par[nax];
    void reseter(int _n) {
        for (int i = 0; i < _n; ++i) {
            par[i] = i;
        }
    }

    int find(int u) {
        return par[u] = ((u != par[u]) ? find(par[u]) : par[u]);
    }

    void join(int u, int v) {
        u = find(u), v = find(v);
        if v < u) {
            swap(u, v);
        }
        par[v] = u;
    }
};
